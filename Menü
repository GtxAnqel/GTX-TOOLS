#!/bin/bash

while true; do
  clear
  figlet "GTX TOOLS" | lolcat
  echo -e "\033[36mGtxAnqel tarafÄ±ndan geliÅŸtirilmiÅŸtir. EÄŸitim amaÃ§lÄ±dÄ±r.\033[0m"
  echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
  echo ""

  echo -e "\n\033[33mMENÃœ:\033[0m"
  echo "1. IP Konum Bulucu"
  echo "2. KullanÄ±cÄ± AdÄ± TaramasÄ± (GTX Userscan)"
  echo "3. Link GÃ¼venlik KontrolÃ¼"
  echo "4. Sistem Bilgisi"
  echo "5. Ã‡Ä±kÄ±ÅŸ"
  read -p $'\nBir seÃ§enek girin [1-5]: ' secim

  case "$secim" in
    1)
      clear
      figlet "GTX IP-TRACER" | lolcat
      read -p $'\033[33mğŸ” IP adresi ya da komut (GTX-M / GTX-MN): \033[0m' girdi

      function bilgi_goster {
        ip="$1"
        echo -e "\033[93m[!] Bilgiler alÄ±nÄ±yor...\033[0m"
        data=$(curl -s "http://ip-api.com/json/$ip?fields=status,country,regionName,city,district,zip,lat,lon,message")
        status=$(echo "$data" | grep -oP '(?<="status":")[^"]+')
        if [[ "$status" != "success" ]]; then
          echo -e "\033[31m[!] Hata: $(echo "$data" | grep -oP '(?<="message":")[^"]+')\033[0m"
          return 1
        fi
        echo -e "\033[92mIP BÄ°LGÄ°SÄ°:\033[0m"
        echo -e "  IP        : $ip"
        echo -e "  Ãœlke      : $(echo "$data" | grep -oP '(?<="country":")[^"]+')"
        echo -e "  BÃ¶lge     : $(echo "$data" | grep -oP '(?<="regionName":")[^"]+')"
        echo -e "  Åehir     : $(echo "$data" | grep -oP '(?<="city":")[^"]+')"
        ilce=$(echo "$data" | grep -oP '(?<="district":")[^"]*')
        [[ -z "$ilce" ]] && ilce="Bilinmiyor"
        echo -e "  Ä°lÃ§e      : $ilce"
        posta=$(echo "$data" | grep -oP '(?<="zip":")[^"]*')
        [[ -z "$posta" ]] && posta="Bilinmiyor"
        echo -e "  Posta     : $posta"
        echo -e "  Koordinat : $(echo "$data" | grep -oP '(?<="lat":)[^,]+'), $(echo "$data" | grep -oP '(?<="lon":)[^,}]+')"
        echo -e "  Harita    : https://maps.google.com/?q=$(echo "$data" | grep -oP '(?<="lat":)[^,]+'),$(echo "$data" | grep -oP '(?<="lon":)[^,}]+')"
      }

      if [[ "$girdi" == "GTX-M" ]]; then
        bilgi_goster "$(curl -s ifconfig.me)"
      elif [[ "$girdi" == "GTX-MN" ]]; then
        # MenÃ¼ye dÃ¶nmek iÃ§in burayÄ± boÅŸ bÄ±rakabiliriz
        # veya continue diyebiliriz ama zaten menÃ¼ baÅŸÄ±nda dÃ¶ngÃ¼ temizler
        :
      elif [[ "$girdi" =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
        bilgi_goster "$girdi"
      else
        echo -e "\033[31m[!] GeÃ§ersiz giriÅŸ.\033[0m"
      fi
      read -p $'\nâ†©ï¸ Enter ile menÃ¼ye dÃ¶n...' ;;
    2)
      clear
      figlet "GTX USERSCAN" | lolcat
      echo -e "\033[36mKullanÄ±cÄ± adÄ± sosyal medya tarayÄ±cÄ±sÄ± baÅŸlatÄ±ldÄ±.\033[0m"
      platformlar=(
        "Instagram:https://www.instagram.com/"
        "Twitter:https://www.twitter.com/"
        "GitHub:https://www.github.com/"
        "Facebook:https://www.facebook.com/"
        "TikTok:https://www.tiktok.com/@"
        "Reddit:https://www.reddit.com/user/"
        "YouTube:https://www.youtube.com/@"
        "Kick:https://kick.com/"
      )

      while true; do
        read -p "ğŸ” KullanÄ±cÄ± adÄ± ya da 'k' komutu: " kullanici
        [[ "$kullanici" == "k" ]] && break

        echo -e "\n\033[33mSosyal medya taramasÄ± baÅŸlatÄ±lÄ±yor...\033[0m"
        for site in "${platformlar[@]}"; do
          isim=$(echo "$site" | cut -d":" -f1)
          url=$(echo "$site" | cut -d":" -f2-)
          tam_url="${url}${kullanici}"
          http_status=$(curl -s -L -o /dev/null -w "%{http_code}" "$tam_url")

          if [[ "$http_status" =~ ^2[0-9]{2}$ || "$http_status" =~ ^3[0-9]{2}$ ]]; then
            echo -e "\033[32m[âœ“] $isim bulundu: $tam_url\033[0m"
          else
            echo -e "\033[31m[âœ—] $isim bulunamadÄ±.\033[0m"
          fi
          sleep 0.2
        done
        echo ""
      done
      read -p $'\nâ†©ï¸ Enter ile menÃ¼ye dÃ¶n...' ;;
    3)
      clear
      figlet "GTX LINKSCAN" | lolcat
      read -p "ğŸ”— URL'yi girin: " url
      if echo "$url" | grep -q "^https://"; then
        echo -e "\033[32m[+] HTTPS kullanÄ±lÄ±yor (gÃ¼venli baÄŸlantÄ±)\033[0m"
      else
        echo -e "\033[33m[-] HTTPS yok, dikkatli olun\033[0m"
      fi
      domain=$(echo $url | awk -F/ '{print $3}')
      whois_info=$(whois $domain | grep -Ei 'Registrar|Creation Date' | head -n 4)
      echo -e "\n\033[36mDomain Bilgisi:\033[0m\n$whois_info"
      httpcode=$(curl -s -o /dev/null -w "%{http_code}" "$url")
      if [[ "$httpcode" == "200" ]]; then
        echo -e "\033[32m[âœ“] Link Ã§alÄ±ÅŸÄ±yor.\033[0m"
      else
        echo -e "\033[31m[âœ—] Link sorunlu ($httpcode).\033[0m"
      fi
      read -p $'\nâ†©ï¸ Enter ile menÃ¼ye dÃ¶n...' ;;
    4)
      clear
      figlet "GTX SYSTEM" | lolcat
      echo -e "\033[33mCihaz bilgileri:\033[0m"
      echo "KullanÄ±cÄ±  : $(whoami)"
      echo "Hostname   : $(uname -n)"
      echo "Sistem     : $(uname -o)"
      echo "Ã‡ekirdek   : $(uname -r)"
      echo "Mimari     : $(uname -m)"
      echo "IP Adresi  : $(curl -s ifconfig.me)"
      read -p $'\nâ†©ï¸ Enter ile menÃ¼ye dÃ¶n...' ;;
    5)
      echo -e "\n\033[31mÃ‡Ä±kÄ±ÅŸ yapÄ±lÄ±yor. GÃ¶rÃ¼ÅŸmek Ã¼zere!\033[0m"
      exit ;;
    *)
      echo -e "\033[31mGeÃ§ersiz seÃ§enek!\033[0m"
      read -p $'\nâ†©ï¸ Enter ile menÃ¼ye dÃ¶n...' ;;
  esac
done